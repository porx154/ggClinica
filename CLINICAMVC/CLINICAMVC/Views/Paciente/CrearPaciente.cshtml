                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.AlePaciente, htmlAttributes: new { @class = "control-label col-md-6" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.AlePaciente, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.AlePaciente, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.AntPaciente, htmlAttributes: new { @class = "control-label col-md-6" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.AntPaciente, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.AntPaciente, "", new { @class = "text-danger" })
                    </div>
                </div>



                <div class="form-group">
                    <input type="submit" value="Crear Historial" class="btn btn-primary mr-2" />
                    <a href="@Url.Action("ConsultarHistorialPaciente","Paciente")" class="btn btn-danger mr-2">Cancelar</a>
                </div>

            }
        </div>
       
    </div>
 
</body>
</html>
