                        @Html.EditorFor(model => model.EdadPaciente, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.EdadPaciente, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.PesoPaciente, htmlAttributes: new { @class = "control-label col-md-2" })
