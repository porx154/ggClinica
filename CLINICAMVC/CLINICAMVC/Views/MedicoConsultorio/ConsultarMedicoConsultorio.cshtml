@model IEnumerable<CLINICAMVC.Models.Medico>

@{
    ViewBag.Title = "Medico - Consultorio";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ConsultarMedicoConsultorio</title>
    <style>
        select, input[type="submit"] {
        margin: 10px 0px 10px 10px;
        }
        .formulario a{
            float:right;
            margin-top:15px;
            margin-right:40px;
        
        }
        .table-responsive{
            font-size:12px;
        }
    </style>
</head>
<body>
    <h4>@ViewBag.Title</h4>
    <div class="card">
        <div class="formulario">
            @using (Html.BeginForm())
            {
                @Html.DropDownList("idespecialidad", (SelectList)ViewBag.ConMeEsp, "Listar Todos")
                <input type="submit" value="Buscar" class="btn btn-primary"/>
                <a href="@Url.Action("CrearMedicoConsultorio","MedicoConsultorio")" class="btn btn-info mr-2">Nuevo Registro</a>
            }
        </div>
        <div class="table-responsive">
            <table class="table center-aligned-table">
                <thead>
                    <tr class="text-primary">
                        <th>
                            @Html.DisplayNameFor(model => model.NombMedico)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ApeMedico)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DirMedico)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CelMedico)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.EmailMedico)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FecIngMedico)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FecNacMedico)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DniMedico)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.EspecialidadId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ConsultorioId)
                        </th>
                        
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.NombMedico)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ApeMedico)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DirMedico)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CelMedico)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EmailMedico)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FecIngMedico)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FecNacMedico)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DniMedico)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NomEspecialidad)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NomConsultorio)
                            </td>
                            
                            <td>
                                @Html.ActionLink("Editar", "ModificarMedicoConsultorio", new { id = item.Id }, new { @class = "btn btn-outline-primary mr-2" }) 
                                @*@Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                            </td>
                        </tr>
                    }
                </tbody>

                

            </table>
        </div>
    </div>
    
</body>
</html>
